<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/length_48</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.TextViewLabel" parent="Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/accent</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/primary_dark</item>
        <item name="errorEnabled">true</item>
        <item name="endIconTint">@color/icons</item>
        <item name="endIconMode">clear_text</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">@color/accent</item>
        <item name="android:layout_width">@dimen/length_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/length_4</item>
        <item name="android:layout_marginEnd">@dimen/length_4</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/length_24</item>
        <item name="strokeWidth">@dimen/length_0</item>
        <item name="cardElevation">@dimen/length_1</item>

    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/length_8</item>
    </style>

</resources>